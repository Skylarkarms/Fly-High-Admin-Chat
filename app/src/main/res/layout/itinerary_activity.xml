<?xml version="1.0" encoding="utf-8"?>
<layout>
        <data>
                <variable
                    name="itineraryActivity"
                    type="com.example.flyhighadminchat.data.ItineraryActivity" />
        </data>
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/singleMessageContainer"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/_fechaTV"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"

                    android:layout_gravity="center_horizontal"

                    android:textColor="@android:color/primary_text_light"
                    android:gravity="center_vertical"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="@{itineraryActivity._fecha}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/_timeFrameA"

                    android:layout_gravity="start"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="@{itineraryActivity._time}"
                    android:textColor="@android:color/primary_text_light"
                    />
                <TextView
                    android:id="@+id/_actividadTVA"

                    android:layout_gravity="end"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:padding="10dp"
                    android:textSize="30sp"
                    android:text="@{itineraryActivity._actividad}"
                    android:textColor="@android:color/primary_text_light"
                    />
                <TextView
                    android:id="@+id/_detallesTV"

                    android:layout_gravity="start"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="@{itineraryActivity._detalles}"
                    android:textColor="@android:color/primary_text_light"
                    /><TextView
                    android:id="@+id/_ubicacionTV"

                    android:layout_gravity="end"

                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="@{itineraryActivity._ubicacion}"
                    android:textColor="@android:color/primary_text_light"
                    />

        </LinearLayout>
</layout>